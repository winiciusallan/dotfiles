" Vim dotfile configuration
" Winicius Allan @ UFCG

" General configs
set number
syntax on
let mapleader=" "
set nowrap
let g:airline_theme='one'

" Indentation configs
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent

" Search configs
set hlsearch
hi Search ctermbg=226 ctermfg=black

" =========
"  Mapping
" =========
nnoremap <leader>c :close<CR>
nnoremap j <UP>
nnoremap k <DOWN>

" =======
"  Netrw
" =======
noremap <F2> :Lexplore<CR>
let g:netrw_keepdir = 0
let g:netrw_winsize = 30
hi! link netwrMarkFile Search

" Colorscheme
set termguicolors
set background=dark
colorscheme solarized8_low

set laststatus=2
let g:lightline = { 'colorscheme': 'one' }
